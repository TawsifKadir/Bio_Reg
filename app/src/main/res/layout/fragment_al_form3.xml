<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="8dp"
        android:text="Page - (4/4)"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/ic_finger"
                app:tint="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_add"
                            app:tint="@color/green" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Right Thumb"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_add"
                            app:tint="@color/green" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Right Index"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Right Middle"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Right Ring"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Right Little"></TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Left Thumb"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Left Index"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Left Middle"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Left Ring"></TextView>
                    </LinearLayout>

                    <LinearLayout style="@style/AppFingerLayoutStyle">

                        <ImageView
                            style="@style/AppFingerImgStyle"
                            android:src="@drawable/ic_finger_minus"
                            app:tint="@color/red" />

                        <TextView
                            style="@style/AppFingerText"
                            android:text="Left Little"></TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="wrap_content">

        <include
            android:id="@+id/view_button_back_next"
            layout="@layout/view_button_back_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
